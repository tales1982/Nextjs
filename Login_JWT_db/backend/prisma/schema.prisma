///////////////////////////////////////////////////////////////////////////////////////////////////////////
/// üîß Bloco generator                                                                                  ///
/// Esse bloco informa ao Prisma que queremos gerar um client JavaScript                                ///
/// (ou TypeScript) para interagir com o banco de dados.                                                ///
/// provider = "prisma-client-js": define que o Prisma vai gerar o c√≥digo do cliente para voc√™ usar     ///
///////////////////////////////////////////////////////////////////////////////////////////////////////////
generator client {
    provider = "prisma-client-js"
}


///////////////////////////////////////////////////////////////////////////////////////////////////////
/// üóÉÔ∏è Bloco datasource                                                                             ///
/// Esse trecho define o banco de dados que o Prisma vai usar.                                      ///
/// provider = "postgresql": indica que voc√™ est√° usando PostgreSQL.                                ///
/// url = env("DATABASE_URL"): busca a URL de conex√£o do banco de dados no arquivo .env.            ///
///////////////////////////////////////////////////////////////////////////////////////////////////////
datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

///////////////////////////////////////////////////////////////////////////////////////
/// üì¶ Bloco model User                                                             ///        
/// Esse √© o modelo de dados, que vira uma tabela no PostgreSQL chamada User.       ///
/// üß™ Resultado no PostgreSQL                                                      ///
/// Esse modelo vai gerar algo como:                                                ///
/// CREATE TABLE "User" (                                                           ///
///  "id" UUID PRIMARY KEY DEFAULT gen_random_uuid(),                               ///
///  "name" TEXT NOT NULL,                                                          ///
///  "email" TEXT NOT NULL UNIQUE,                                                  ///
///  "password" TEXT NOT NULL,                                                      ///
///  "createdAt" TIMESTAMP DEFAULT CURRENT_TIMESTAMP                                ///
/// );                                                                              ///
///////////////////////////////////////////////////////////////////////////////////////
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

